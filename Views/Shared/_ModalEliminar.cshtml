<div class="modal fade in" id="deleteDialog" tabindex="-1" role="dialog" data-bs-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-blue-gradient">
                <h5 class="modal-title" id="exampleModalLabel">Borrar Registro</h5>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de querer borrar este registro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"> </i> No</button>
                <button type="button" class="btn btn-danger" id="btnYesDelete"><i class="fa fa-check-circle"> </i> Sí</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    var showSuccess = false;

    $(document).ready(function () {
        $("#btnYesDelete").on("click", function () {
            // Aquí deberías poner tu lógica para determinar si mostrar éxito o error
            // Por ahora, se mostrará el mensaje de éxito directamente
            showSuccess = true;

            if (showSuccess) {
                Swal.fire({
                    title: "Se eliminó correctamente",
                    text: "El registro se ha eliminado exitosamente.",
                    icon: "success"
                });
                // Aquí debes incluir tu lógica para realizar la eliminación del registro
            } else {
                Swal.fire({
                    title: "Error",
                    text: "Mensaje de error aquí",
                    icon: "error"
                });
            }

            // Cerrar el modal
            $("#deleteDialog").modal("hide");
        });
    });
</script>
