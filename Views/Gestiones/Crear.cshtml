@model ProyectoRosty.Models.Entidades.GestionDeGaseosas
@{
    ViewData["title"] = "CrearGestion";
    Layout = null;
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header text-center">
            <h5><i class="fa fa-plus-circle"></i> Agregar una nueva Gestion</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Crear">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row mb-3">
                    <label for="Nombre" class="col-sm-2 col-form-label"><i class="fa fa-tag"></i> Nombre</label>
                    <div class="col-sm-10">
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="CantidadDisponible" class="col-sm-2 col-form-label"><i class="fa fa-shopping-cart"></i> Cantidad</label>
                    <div class="col-sm-10">
                        <input asp-for="CantidadDisponible" class="form-control" placeholder="Cantidad" required />
                        <span asp-validation-for="CantidadDisponible" class="number"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="PrecioUnitario" class="col-sm-2 col-form-label"><i class="fa fa-dollar-sign"></i> Precio Unitario</label>
                    <div class="col-sm-10">
                        <input asp-for="PrecioUnitario" class="form-control" placeholder="Precio Unitario" required />
                        <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="FechaIngreso" class="col-sm-2 col-form-label"><i class="fa fa-calendar"></i> Fecha de ingreso</label>
                    <div class="col-sm-10">
                        <input asp-for="FechaIngreso" class="form-control" placeholder="Fecha de ingreso de la Gestion" required />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Proveedor" class="col-sm-2 col-form-label"><i class="fa fa-truck"></i> Nombre del Proveedor</label>
                    <div class="col-sm-10">
                        <input asp-for="Proveedor" class="form-control" placeholder="Nombre del Proveedor" required />
                        <span asp-validation-for="Proveedor" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Descripcion" class="col-sm-2 col-form-label"><i class="fa fa-info-circle"></i> Descripcion</label>
                    <div class="col-sm-10">
                        <input asp-for="Descripcion" class="form-control" placeholder="Descripcion de la Gestion" required />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal"><i class="fa fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


