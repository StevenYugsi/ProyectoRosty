@model ProyectoRosty.Models.Entidades.Roles
@{
    ViewData["title"] = "EditarRoles";
    Layout = null;
}
<div class="col-md-12">
    <div class="card rounded" style="background-color: #9cffae;">
        <div class="card-header text-center rounded-top" style="background-color: #44c967;">
            <h5 class="font-italic text-uppercase" style="font-family: 'Segoe Script', cursive;"><i class="fas fa-edit"></i> Editar Rol</h5>
        </div>
        <div class="card-body text-center">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdRol" />

                <div class="form-group row mb-3">
                    <label for="Rol" class="col-sm-2 col-form-label" style="color: #130000;"><i class="fas fa-tag"></i> Rol</label>
                    <div class="col-sm-10">
                        <input asp-for="Rol" class="form-control rounded" placeholder="Rol" required />
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label for="Descripcion" class="col-sm-2 col-form-label" style="color: #130000;"><i class="fas fa-dollar-sign"></i> Descripcion</label>
                    <div class="col-sm-10">
                        <input asp-for="Descripcion" class="form-control rounded" placeholder="Descripcion" required />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="card-footer rounded-bottom" style="background-color: #0000;">
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-outline-success btn-3d" style="margin-right: 80px;"><i class="fas fa-save"></i> Guardar</button>
                        <button type="button" class="btn btn-lg btn-outline-danger btn-3d" data-bs-dismiss="modal"><i class="fas fa-ban"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
